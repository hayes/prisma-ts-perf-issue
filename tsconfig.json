{
	"compilerOptions": {
		"rootDir": "src",
		"target": "ES2019",
		
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
